{{#extend "title"}}
    Rent Gear - Results
{{/extend}}

{{#extend "css"}}
    <link rel="stylesheet" href="/css/jquery-ui.min.css">
    <link rel="stylesheet" href="/css/jquery-ui.theme.min.css">
    <link rel="stylesheet" href="/css/jquery-ui.structure.min.css">
    <link rel="stylesheet" href="/css/find-gear/results.css">
{{/extend}}

<div class="container-fluid" id="top-bar">
    <div class="pull-left">
        <a href="/"><i class="fa fa-home"></a></i>
    </div>
    <h3 class="navText">Results</h3>
    <div class="pull-right">
        <i class="fa fa-bars" id="open-menu"></i>
    </div>
</div>

<div id="push"></div>

<div class="container" id="filter">
    <div class="input-group" id="product-filter">
        <span class="input-group-addon" id="sizing-addon1">Maximum Price:</span>
        <input type="number" class="form-control" placeholder="10" aria-describedby="sizing-addon1">
        <span class="input-group-btn">
        <button class="btn btn-default" id="filter-btn" type="button">Apply Filter</button>
      </span>
    </div>
</div>

<div class="container" id="content">
    <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-6">
            {{#each tents}}
                {{#if_even @index}}
                    <a class="listing-box" href="/view/{{id}}" data-price="{{price}}">
                        <img src="{{picture}}" class="img-responsive">
                        <div class="price">${{price}}</div>
                        <p>{{title}}</p>
                    </a>
                {{/if_even}}
            {{/each}}
        </div>
        <div class="col-md-6 col-sm-6 col-xs-6">
            {{#each tents}}
                {{#if_odd @index}}
                    <a class="listing-box" href="/view/{{id}}" data-price="{{price}}">
                        <img src="{{picture}}" class="img-responsive">
                        <div class="price">${{price}}</div>
                        <p>{{title}}</p>
                    </a>
                {{/if_odd}}
            {{/each}}
        </div>
    </div>
</div>

{{#extend "js"}}
    <script src="/js/jquery-ui.min.js"></script>
    <script src="/js/results.js"></script>
{{/extend}}