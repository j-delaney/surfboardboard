{{#extend "title"}}
    List Gear - Steps to List
{{/extend}}

{{#extend "css"}}
    <link rel="stylesheet" href="/css/list-gear/list-steps.css">
{{/extend}}

<div id="top-bar-steps">
    <h2>6 steps to list</h2>
</div>

<div id="main-img">
    <img id="photos-icon" src="/img/CameraIcon.png">
    <h5 id="add-photos">
        <button id="upload">Add Photo</button>
        <input type="file" id="input-upload" accept="image/*;capture=camera"></h5>
</div>

<div id="after-img">
    <div class="link-list" id="steps">
        <a href="#">
            <img src="/img/unchecked-box.png" id="unchecked">
            <h3 id="StepHeader">Write Title</h3>
            <h4 id="StepSubtitle">Give your listing a descriptive headline</h4>
            <div class="dropper">
                Hello world
            </div>
        </a>
        <a href="#">
            <img src="/img/unchecked-box.png" id="unchecked">
            <h3 id="StepHeader">Write Description</h3>
            <h4 id="StepSubtitle">Describe your listing's characteristics</h4>
            <div class="dropper">
                More stuff!
            </div>
        </a>
        <a href="#">
            <img src="/img/unchecked-box.png" id="unchecked">
            <h3 id="StepHeader">Set Price</h3>
            <h4 id="StepSubtitle">It's time to make money off that thing!</h4>
        </a>
        <a href="#">
            <img src="/img/unchecked-box.png" id="unchecked">
            <h3 id="StepHeader">Set Pickup Address</h3>
            <h4 id="StepSubtitle">Where will people pick it up from you?</h4>
        </a>
        <a href="#">
            <img src="/img/unchecked-box.png" id="unchecked">
            <h3 id="StepHeader">Product Details</h3>
            <h4 id="StepSubtitle">Specify Important Details</h4>
        </a>
    </div>
</div>


